@using CodelyTv.Apps.Backoffice.Frontend.Extension.Validators
@model CoursesPostWebModel

<form class="w-full max-w-lg float-right" method="post" action="@Url.Action("Index", "CoursesPostWeb")">
    <h2 class="block uppercase tracking-wide text-gray-700 text-3xl font-bold mb-2">Crear curso</h2>
    <div class="flex flex-wrap mb-6 -mx-3">
        <div class="w-full md:w-full px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                Identificador
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-first-name" asp-for="Id" name="id" type="text" placeholder="En formato UUID" value="@ViewBag.UUID">
            @Html.ValidationSummaryByProperty(ViewData.ModelState, "Id", "text-red-500 text-xs italic")

        </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-first-name">
                Nombre
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-first-name" asp-for="Name" name="name" type="text" placeholder="DDD en PHP">
            @Html.ValidationSummaryByProperty(ViewData.ModelState, "Name", "text-red-500 text-xs italic")

        </div>
        <div class="w-full md:w-1/2 px-3">
            <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="grid-last-name">
                Duración (en inglés)
            </label>
            <input class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                   id="grid-last-name" asp-for="Duration" name="duration" type="text" placeholder="8 days">
            @Html.ValidationSummaryByProperty(ViewData.ModelState, "Duration", "text-red-500 text-xs italic")
        </div>
    </div>
    @Html.Hidden("CoursesCounter", ViewBag.CoursesCounter, null)
    <div class="flex flex-wrap mb-6">
        <button class="md:w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                type="submit">
            Crear curso!
        </button>
    </div>
</form>
